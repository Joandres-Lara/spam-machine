{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "lib",
    "allowJs": true,
    "declaration": true,
    "composite": false,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true
  },
}
